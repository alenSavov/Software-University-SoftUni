@{
    ViewData["Title"] = "Eventures";
}

<div class="container w-50 ">
    <form class="mx-auto" method="post" asp-controller="Users" asp-action="Register">
        <h3 class="text-center font-weight-bold">Register</h3>
        <hr class="hr-2 bg-eventures" />
        <div class="d-flex justify-content-between">
            <div class="form-group text-center font-weight-bold w-45">
                <label for="username">Username</label>
                <input type="text" name="username" class="form-control" id="username" placeholder="Username">
            </div>
            <div class="form-group text-center font-weight-bold w-45">
                <label for="email">Email</label>
                <input type="text" name="email" class="form-control" id="email" placeholder="Email">
            </div>
        </div>
        <div class="d-flex justify-content-between">
            <div class="form-group text-center font-weight-bold w-45">
                <label for="password">Password</label>
                <input type="password" name="password" class="form-control" id="password" placeholder="Password">
            </div>
            <div class="form-group text-center font-weight-bold w-45">
                <label for="confirmPassword">Confirm Password</label>
                <input type="password" name="confirmPassword" class="form-control" id="confirmPassword" placeholder="Confirm Password">
            </div>
        </div>
        <hr class="hr-2 bg-eventures" />
        <div class="d-flex justify-content-between">
            <div class="form-group text-center font-weight-bold w-45">
                <label for="firstName">First Name</label>
                <input type="text" name="firstName" class="form-control" id="firstName" placeholder="First Name">
            </div>
            <div class="form-group text-center font-weight-bold w-45">
                <label for="lastName">Last Name</label>
                <input type="text" name="lastName" class="form-control" id="lastName" placeholder="Last Name">
            </div>
        </div>
        <div class="form-group text-center font-weight-bold">
            <label for="lastName">UCN</label>
            <input type="text" name="ucn" class="form-control" id="ucn" placeholder="Universal Citizen Number">
        </div>
        <hr class="hr-2 bg-eventures pt" />
        <div class="d-flex justify-content-center">
            <input type="submit" class="btn btn-info " value="Register">
        </div>
    </form>
</div>