@model CreateEventsViewModel


<h1 class="text-center">Register</h1>
<form class="mx-auto w-50" method="post" asp-controller="Events" asp-action="Create">
    <hr class="hr-2 bg-eventures half-width" />
    <div class="form-row d-flex justify-content-between my-3">
        <div class="form-colmn col-md-6 d-flex flex-column align-items-center">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" placeholder="Iron Maiden - Hills of Rock" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-colmn col-md-6 d-flex flex-column align-items-center">
            <label asp-for="Place"></label>
            <input asp-for="Place" class="form-control" placeholder="Plovdiv, Bulgaria" />
            <span asp-validation-for="Place" class="text-danger"></span>
        </div>
    </div>
    <hr class="hr-2 bg-eventures" />
    <div class="form-row d-flex justify-content-between my-3">
        <div class="form-colmn col-md-6 d-flex flex-column align-items-center">
            <label asp-for="Start"></label>
            <input asp-for="Start" class="form-control" placeholder="20-Jul-2018 22:00" />
            <span asp-validation-for="Start" class="text-danger"></span>
        </div>
        <div class="form-colmn col-md-6 d-flex flex-column align-items-center">
            <label asp-for="End"></label>
            <input asp-for="End" class="form-control" placeholder="20-Aug-2018 04:00" />
            <span asp-validation-for="End" class="text-danger"></span>
        </div>
    </div>
    <hr class="hr-2 bg-eventures" />
    <div class="form-row d-flex justify-content-between my-3">
        <div class="form-colmn col-md-6 d-flex flex-column align-items-center">
            <label asp-for="TotalTickets"></label>
            <input asp-for="TotalTickets" class="form-control" placeholder="1000" />
            <span asp-validation-for="TotalTickets" class="text-danger"></span>
        </div>
        <div class="form-colmn col-md-6 d-flex flex-column align-items-center">
            <label asp-for="PricePerTicket"></label>
            <input asp-for="PricePerTicket" class="form-control" placeholder="150" />
            <span asp-validation-for="PricePerTicket" class="text-danger"></span>
        </div>
    </div>
    <hr class="hr-2 bg-eventures" />
    <div class="button-holder d-flex justify-content-center p-3">
        <button type="submit" class="btn bg-eventures">Create Event</button>
    </div>
</form>